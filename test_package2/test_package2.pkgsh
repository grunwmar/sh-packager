#!/bin/bash
B64TARCHIVE=$(cat <<-TAR64
H4sIAAAAAAAAA+3RQQrCMBCF4aw9RXbVjSZp01zBW4SiQcRaSxsRPb1VEHRRdNEi4v9tBjKzeOHF
0EZfF6tdsQlmIUahOs7Z29TOquf5IHSWZk5ZndpcKJ0aZYS048R5dWxj0UgpLqEM1bn/7t3+R8WX
/r3fF9vK+3k95E9vBed51t+/sff+c6e1ct27tqY7l2rADL3+vP+62VZxmixDWR7k6dCU62Q2+XYo
AAAAAAAAAAAAAAAAAB+5AtKblo0AKAAA
TAR64
);
RUNSH=$(cat <<-RUNSH
source ./venv/bin/activate
python '__main__.py \$@'
RUNSH
);
WD="$PWD"
if [[ "$1" = "--path" ]]; then
    WD="$2"
    cd "$WD"
fi
TMP_TARPATH="$WD"/"tmp_test_package2".tarpkg
echo "** Unpacking 'test_package2' package...";
echo "$B64TARCHIVE" | base64 --decode > "$TMP_TARPATH"
tar -xzvf "$TMP_TARPATH"
rm "$TMP_TARPATH"
cd "test_package2"
if [ -f requirements.txt ]; then
    echo "Installing virtual environment for python3."
    python3 -m venv venv
    ./venv/bin/pip install -r requirements.txt
    if ! ([ -f "run.sh" ] || [ -f "run" ]); then
        echo "$RUNSH" > run.sh
        chmod +x run.sh
    fi
fi
echo "Done."
echo "-------------------------------------------"
pwd
ls
echo ""
if ! [ -z $(which notify-send) ]; then
    notify-send "Unpacked" "File '$0' unpacked."
fi

